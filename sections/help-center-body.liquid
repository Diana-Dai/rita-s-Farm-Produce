<style>

  .grid-item{
    padding: 0 15px 30px;
  }
  .grid-item__inner{
    text-align:center;
    padding: 30px 30px 20px;
    border: 1px solid #e8e8e8;
    transition: 0.1s linear;
  }
  .grid-item__inner:hover{
    background-color: #F5F5F5;
  }
  .grid-item__inner p{
    line-height: 1.3;
  }
  @media screen and (min-width: 750px){
    .grid-wrapper{
      display: flex;
      flex-wrap: wrap;
    }
    .grid-item{
      width:33.3%;
      padding: 0 15px 30px;
    }
    h4{
      font-size: 19px;
    }
    
  }
</style>
<div class="grid-container">
    <div class="grid-wrapper">
      {% for block in section.blocks %}
        <div class="grid-item">
          <a href="{{ block.settings.link }}">
            <div class="grid-item__inner">
                <h4>{{ block.settings.title }}</h1>
                <p>{{ block.settings.description }}</h1>
            </div>
          </a>
        </div>
              
      {% endfor %}
    </div>
</div>
{% schema %}
{
  "name": "main",
  "tag": "section",
  "blocks":[
  {
    "type": "section",
    "name": "section",
     "settings": [
       {
         "type": "url",
         "id": "link",
         "label": "Link"
       },
       {
         "type": "text",
         "id": "title",
         "label": "Title"
       },
       {
         "type": "richtext",
         "id": "description",
         "label": "Description"
       }
     ]
   }],
 "presets": [
   {
     "name":"main"
   }
 ]
}
{% endschema %}